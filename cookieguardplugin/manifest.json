{
  "manifest_version": 3,
  "name": "CookieGuard AI",
  "version": "1.0.0",
  "description": "AI-powered cookie security scanner. Detect identity risks in one click.",
  
  "permissions": [
    "cookies",
    "activeTab"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "CookieGuard AI - Click to scan cookies"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "host_permissions": []
}
